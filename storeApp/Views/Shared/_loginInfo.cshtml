
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager;

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link active">Hello @User.FindFirst("Name").Value</a>
    </li>
    <li>
        <a class="nav-link active" asp-action="Logout" asp-controller="Account">Logout</a>
    </li>
    <li>
        <a class="nav-link active" asp-action="ChangePassword" asp-controller="Account">Change password</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Account" asp-action="SignUp">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Path">Login</a>
    </li>
}
